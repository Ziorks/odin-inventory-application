<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <%- include('partials/errors.ejs') %>
    <form action="/categories/<%= category.id %>/update" method="POST">
      <div>
        <input
          type="text"
          name="name"
          id="name"
          value="<%= category.name %>"
          required />
      </div>
      <button type="submit">Submit</button>
    </form>
    <a href="/">Back to home</a>
  </body>
</html>
